<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="2dp" />
            <gradient
                android:angle="270"
                android:centerColor="@color/fenge"
                android:endColor="@color/fenge"
                android:startColor="@color/fenge" />
        </shape>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="2dp" />
                <gradient
                    android:centerColor="#228FFE"
                    android:endColor="#228FFE"
                    android:startColor="#228FFE" />
            </shape>
        </clip>
    </item>

</layer-list>