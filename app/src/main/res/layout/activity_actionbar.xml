<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="9dp"
        android:background="@color/tr_action"></View>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:background="@color/tr_action"
        android:orientation="horizontal">
        <LinearLayout
            android:visibility="gone"
            android:id="@+id/add_after"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentLeft="true"
            android:orientation="horizontal"
            >

            <ImageView
                android:id="@+id/img_left_after"
                android:layout_width="10dp"
                android:layout_height="18dp"
                android:layout_gravity="center"
                android:layout_marginLeft="17dp"
                android:focusable="false"
                android:background="@mipmap/ret_black"
                android:onClick="imgOnclickAfter"
                android:padding="10px" />
            <RelativeLayout
                android:layout_width="30dp"
                android:layout_marginLeft="24dp"
                android:layout_height="wrap_content">
            <com.zwonline.top28.utils.ImageViewPlus
                android:id="@+id/add_user_after"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:src="@mipmap/no_photo_male"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/user_dev"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="18dp"
                android:src="@mipmap/v_icon"
                android:visibility="gone"
               />
            </RelativeLayout>
            <TextView
                android:id="@+id/add_name_after"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="10dp"
                android:gravity="center"
                android:textColor="#ff4f4f4f"
                android:textSize="15sp" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/add_befor"
            android:layout_width="295dp"
            android:layout_height="match_parent">
            <LinearLayout
                android:id="@+id/lin_befo"
                android:layout_width="70dp"
                android:layout_height="match_parent"
                android:orientation="horizontal">

                <ImageView
                    android:layout_marginLeft="17dp"
                    android:id="@+id/img_left_befor"
                    android:layout_width="10dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center"
                    android:background="@mipmap/back"
                    android:gravity="center"
                    android:onClick="imgOnclickBefor"
                    android:padding="10px" />
            </LinearLayout>

            <TextView
                android:id="@+id/add_fr_befor"
                android:layout_width="64dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_gravity="center"
                android:layout_marginLeft="194dp"
                android:layout_marginRight="30dp"
                android:background="@drawable/back_action"
                android:gravity="center"
                android:text=" + 好友"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="16dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/add_foll_befor"
                android:layout_width="64dp"
                android:layout_height="30dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@drawable/btn_ganzhu_red"
                android:text="关注"
                android:textColor="@color/white"
                android:textSize="15sp" />
        </LinearLayout>
    </RelativeLayout>

</LinearLayout>
