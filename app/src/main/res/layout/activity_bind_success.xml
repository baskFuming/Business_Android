<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.BindSuccessActivity">

    <include layout="@layout/base_title_helper" />

    <ImageView
        android:layout_width="79dp"
        android:layout_height="79dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="68dp"
        android:src="@mipmap/binding_icon2" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="恭喜,绑定成功"
        android:textColor="#96959A"
        android:textSize="16sp" />

    <TextView
        android:id="@+id/phone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="6dp"
        android:text="恭喜,绑定成功"
        android:textColor="#3D3D3D"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/tv_back"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="100dp"
        android:background="@drawable/guanzhu_shape"
        android:gravity="center"
        android:text="返回"
        android:textColor="@color/reded"
        android:textSize="18sp" />

</LinearLayout>