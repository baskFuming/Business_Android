<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/home_linear"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/header_layout"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="5dp"
            android:layout_marginLeft="10dp"
            android:layout_weight="1"
            android:src="@mipmap/signin_logo" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:layout_marginLeft="10dp"
            android:layout_weight="4"
            android:orientation="horizontal">

            <EditText
                android:id="@+id/et_home"
                android:layout_width="0dp"
                android:layout_height="33dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="2dp"
                android:layout_marginRight="15dp"
                android:layout_toLeftOf="@id/btn_search"
                android:layout_weight="6"
                android:background="@drawable/et_home_shape"
                android:cursorVisible="false"
                android:drawableLeft="@mipmap/home_search"
                android:drawablePadding="10dp"
                android:hint="搜索感兴趣的内容"
                android:imeOptions="actionSearch"
                android:paddingLeft="10dp"
                android:singleLine="true"
                android:textColor="@color/black"
                android:textColorHint="#B9B9B9"
                android:textCursorDrawable="@drawable/color_cursor" />

            <Button
                android:id="@+id/btn_search"
                android:layout_width="0dp"
                android:layout_height="30dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="5dp"
                android:layout_marginRight="10dp"
                android:layout_weight="1"
                android:background="@drawable/btn_search_shape"
                android:drawableLeft="@mipmap/search"
                android:paddingLeft="11dp"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/hot_business"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_gravity="bottom"
                android:layout_marginBottom="10dp"
                android:layout_marginRight="10dp"
                android:src="@mipmap/menubar_jifen1"
                android:visibility="visible" />
        </LinearLayout>


    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:background="@color/white">

        <net.lucode.hackware.magicindicator.MagicIndicator
            android:id="@+id/magic_indicator"
            android:layout_width="match_parent"
            android:background="@color/white"
            android:layout_height="40dp"></net.lucode.hackware.magicindicator.MagicIndicator>
        <android.support.design.widget.TabLayout
            android:id="@+id/tablayout"
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:tabIndicatorColor="@color/red"
            app:tabSelectedTextColor="#2F2F2F"
            app:tabIndicatorHeight="5dp"
            android:layout_centerInParent="true"
            app:tabTextAppearance="@style/MyTabLayoutText"
            app:tabTextColor="#807F81"></android.support.design.widget.TabLayout>

        <RelativeLayout
            android:id="@+id/hot_business_relat"
            android:layout_width="151dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="5dp"
            android:orientation="vertical"
            android:layout_alignParentRight="true"
            android:visibility="visible"
            >

            <ImageView
                android:id="@+id/up_arrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_marginRight="9dp"
                android:background="@mipmap/sanjiao"
                android:visibility="visible" />

            <LinearLayout
                android:id="@+id/tip_text"
                android:layout_width="155dp"
                android:layout_height="38dp"
                android:layout_below="@id/up_arrow"
                android:background="@drawable/hot_businesse_shape"
                android:orientation="horizontal"
                android:paddingRight="10dp">


                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="18dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="10dp"
                    android:src="@mipmap/prompt_icon" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginLeft="5dp"
                    android:text="热商机在这里哦"
                    android:textColor="@android:color/white"
                    android:textSize="16sp" />
            </LinearLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="40dp"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:background="@color/white"
            android:clickable="true"
            android:visibility="gone">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_centerInParent="true"
                android:background="@color/white"
                android:src="@mipmap/fill" />
        </RelativeLayout>

        <View
            android:visibility="gone"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_alignParentBottom="true"
            android:background="@color/fenge"></View>
    </RelativeLayout>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager"
        android:layout_width="match_parent"
        android:layout_height="match_parent"></android.support.v4.view.ViewPager>


</LinearLayout>
