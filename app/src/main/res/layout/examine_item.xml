<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:padding="10dp">
    <ImageView
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:id="@+id/log"
        android:src="@mipmap/ic_launcher"
        android:layout_gravity="center_horizontal"
        />
    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/wdj_waste_processor"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:lines="1"
        android:singleLine="true"

        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/subscribe_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#888888"
        android:textSize="12sp"
        android:text="@string/project_one_subscribe"
        android:layout_gravity="center_horizontal"/>
    <TextView
        android:id="@+id/want_examine"
        android:layout_width="70dp"
        android:layout_height="23dp"
        android:text="@string/project_like_inspect"
        android:textSize="14sp"
        android:layout_marginTop="5dp"
        android:textColor="@color/white"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/btn_register_shape"
        android:gravity="center"/>

</LinearLayout>