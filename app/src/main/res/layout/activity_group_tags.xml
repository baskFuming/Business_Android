<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".nim.main.activity.GroupTagsActivity">

    <include
        android:id="@+id/toolbar"
        layout="@layout/base_title_helper" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:layout_marginTop="5dp"
        android:background="#fff7f7f7"
        android:gravity="center"
        android:text="群组内容将围绕标签进行，不得出现标签以外的内容"
        android:textColor="#3D3D3D"
        android:textSize="14sp" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/group_tags_recy"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginTop="38dp"></android.support.v7.widget.RecyclerView>

    <LinearLayout
        android:layout_width="293dp"
        android:layout_height="35dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="50dp"
        android:background="@drawable/group_tags_shape"
        android:orientation="horizontal"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/create_tag_et"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="6"
            android:background="@null"
            android:hint="请输入自定义标签"
            android:maxLength="5"
            android:textColor="#3D3D3D"
            android:textColorHint="#D5D5D5"
            android:textSize="16sp" />

        <TextView
            android:id="@+id/create"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:text="创建"
            android:textColor="#3D3D3D"
            android:textSize="16sp" />
    </LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginRight="50dp"
        android:layout_marginTop="10dp"
        android:text="最多创建3个标签"
        android:textColor="#ff3d3d3d"
        android:textSize="13sp" />
</LinearLayout>