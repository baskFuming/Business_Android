<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <ImageView
            android:id="@+id/up_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:background="@drawable/popup_window_arrow_up" />
        <LinearLayout
            android:id="@+id/tip_text"
            android:layout_width="120dp"
            android:layout_height="43dp"
            android:orientation="horizontal"
            android:layout_below="@id/up_arrow"
            android:background="@mipmap/popup_window_content_bg">

            <TextView
                android:id="@+id/cory_eomment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="22dp"
                android:text="复制"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white" />

            <TextView
                android:id="@+id/report"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="删除"
                android:layout_marginLeft="15dp"
                android:layout_gravity="center_vertical"
                android:textColor="@android:color/white" />

        </LinearLayout>



        <ImageView
            android:id="@+id/down_arrow"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_below="@id/tip_text"
            android:visibility="gone"
            android:background="@drawable/down_arrow_drawable" />
    </RelativeLayout>

</FrameLayout>
