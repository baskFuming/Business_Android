<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    android:id="@+id/addli"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    >
    <LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="142dp"
    android:orientation="vertical"
        android:focusable="false"
    android:layout_marginRight="32dp">
        <RelativeLayout
            android:layout_width="50dp"
            android:layout_height="50dp">
            <com.zwonline.top28.utils.ImageViewPlus
                android:id="@+id/busi_user"
                android:layout_gravity="center"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:focusable="false"
                android:src="@mipmap/no_photo_male"
                />
            <ImageView
                android:id="@+id/da_v"
                android:layout_width="15dp"
                android:layout_height="15dp"
                android:src="@mipmap/v_icon"
                android:layout_alignParentRight="true"
                android:layout_alignParentBottom="true"
                android:visibility="gone"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/busin_nkname"
            android:layout_width="wrap_content"
            android:layout_height="18dp"
            android:text="用户昵..."
            android:textColor="#ff404040"
            android:textSize="13sp"
            android:maxEms="4"
            android:singleLine="true"
            android:layout_gravity="center"
            android:gravity="center"
            android:ellipsize="end"
            android:layout_marginTop="12dp"
            />
        <TextView
            android:id="@+id/busi_add"
            android:layout_width="48dp"
            android:layout_height="22dp"
            android:background="@drawable/back_action"
            android:text="+"
            android:focusable="false"
            android:layout_gravity="center"
            android:gravity="center"
            android:textColor="#ff2d2d2d"
            android:layout_marginTop="20dp"
            />
</LinearLayout>
</LinearLayout>