<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingLeft="13dp"
    android:paddingRight="15dp"
    android:paddingBottom="10dp"
    android:paddingTop="10dp"
   >

    <com.zwonline.top28.utils.ImageViewPlus
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@mipmap/ic_launcher"
        android:id="@+id/snatch_user_head"
        />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            >
            <TextView
                android:id="@+id/snatch_user_name"
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textColor="#121213"
                android:lines="1"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                />

            <TextView
                android:id="@+id/snatch_yangfen_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="50鞅分"
                android:textColor="#121213"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:ellipsize="end"
                />

        </RelativeLayout>
        <TextView
            android:id="@+id/snatch_yangfen_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="15dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:ellipsize="end"
            android:textColor="#B9B9BA"
            />
    </LinearLayout>

</LinearLayout>