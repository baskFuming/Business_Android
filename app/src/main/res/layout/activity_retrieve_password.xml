<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.zwonline.top28.activity.RetrievePasswordActivity">

    <RelativeLayout
        android:id="@+id/retrieve_back"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="15dp">

        <ImageView
            android:layout_width="15dp"
            android:layout_height="23dp"
            android:layout_centerInParent="true"
            android:src="@mipmap/icon_return" />
    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="10dp"
        android:text="@string/retrieve_password"
        android:textColor="@color/black"
        android:textSize="30sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/country_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="31dp"
        android:drawablePadding="5dp"
        android:drawableRight="@mipmap/sign_sanjiao"
        android:text="中国"
        android:textColor="#333333"
        android:textSize="@dimen/text_size_18"
        android:visibility="gone"/>
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="29dp"
        android:layout_marginTop="15dp"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="21dp"
            android:layout_marginTop="31dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/quhao"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="+86"
                android:textColor="#404040"
                android:textSize="18sp"
                android:visibility="gone"/>

            <EditText
                android:id="@+id/iphone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@null"
                android:hint="@string/without_import_phone_num"
                android:inputType="number"
                android:maxLength="15"
                android:textColor="#404040"
                android:textSize="18sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@id/linear"
            android:layout_marginTop="5dp"
            android:background="@color/fenge"></View>
    </RelativeLayout>


    <Button
        android:id="@+id/retrieve_next"
        android:layout_width="303dp"
        android:layout_height="50dp"
        android:layout_marginLeft="36dp"
        android:layout_marginRight="36dp"
        android:layout_marginTop="39dp"
        android:background="@drawable/btn_gray_shape"
        android:text="@string/without_next_step"
        android:textColor="@color/white"
        android:textSize="18sp" />
</LinearLayout>
