<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/update_linear"
        android:layout_width="279dp"
        android:layout_height="359dp"
        android:background="@drawable/yangfen_backgroun_shape"
        android:orientation="vertical"
        android:visibility="visible">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="197dp"
            android:scaleType="fitXY"
            android:src="@mipmap/quick_bg" />


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="14dp"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/yangfen"
                android:layout_width="23dp"
                android:layout_height="18dp"
                android:layout_centerVertical="true"
                android:layout_marginLeft="5dp"
                android:src="@mipmap/quick_yf" />

            <TextView
                android:id="@+id/yangfen_num"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="11dp"
                android:layout_toRightOf="@id/yangfen"
                android:textColor="#ff3d3d3d"
                android:textSize="16sp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:text="(鞅分未领取)"
                android:textColor="#ff404040"
                android:textSize="14sp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_alignParentBottom="true"
                android:background="#fff3f3f3" />
        </RelativeLayout>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="13dp"
            android:gravity="center_horizontal"
            android:text="亲,坐上小火箭光速抵达鞅分挖矿基地"
            android:textColor="#3d3d3d"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="17dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="25dp"
            android:orientation="horizontal">

            <Button
                android:id="@+id/close"
                android:layout_width="96dp"
                android:layout_height="44dp"
                android:background="@drawable/yangfen_lingqu_shape"
                android:text="朕已阅"
                android:textColor="#ff5b24a6"
                android:textSize="18sp" />

            <Button
                android:id="@+id/go_yangfen"
                android:layout_width="135dp"
                android:layout_height="44dp"
                android:layout_marginLeft="17dp"
                android:background="@mipmap/quick_btn"
                android:text="这就去"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>


</LinearLayout>