<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_gravity="center_vertical"
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="520dp">
        <LinearLayout
            android:layout_centerInParent="true"
            android:focusable="false"
            android:layout_width="345dp"
            android:layout_height="wrap_content"
            android:background="@mipmap/reward_bg"
            android:orientation="vertical">
            <com.zwonline.top28.utils.ImageViewPlus
                android:id="@+id/user_icon"
                android:layout_width="71dp"
                android:layout_height="71dp"
                android:src="@mipmap/ic_launcher_round"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="130dp"
                android:layout_height="18dp"
                android:text="给「用户名」作者打赏"
                android:textColor="#ff3d3d3d"
                android:textSize="13sp"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                />
            <LinearLayout
                android:layout_marginTop="31dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">
                <!--背景 reward_backline-->
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="108dp"
                        android:layout_width="141dp"
                        android:background="@drawable/reward_backline"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="花朵"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:padding="17dp"
                            android:drawableTop="@mipmap/reward_gift1copy"
                            android:textColor="#ff3d3d3d"
                            android:textSize="13sp"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_height="108dp"
                        android:layout_width="141dp"
                        >
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="花束"
                            android:padding="17dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:drawableTop="@mipmap/reward_gift2copy"
                            android:textColor="#ff3d3d3d"
                            android:textSize="13sp"/>
                    </LinearLayout>

                </LinearLayout>
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_height="108dp"
                        android:layout_width="141dp"
                        >
                        <TextView
                            android:layout_weight="1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="掌声"
                            android:padding="17dp"
                            android:gravity="center"
                            android:layout_gravity="center"
                            android:drawableTop="@mipmap/reward_gift3copy"
                            android:textColor="#ff3d3d3d"
                            android:textSize="13sp"/>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginLeft="10dp"
                        android:orientation="vertical"
                        android:layout_height="108dp"
                        android:layout_width="141dp"
                        >
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="轻吻"
                        android:padding="17dp"
                        android:gravity="center"
                        android:layout_gravity="center"
                        android:drawableTop="@mipmap/reward_gift4copy"
                        android:textColor="#ff3d3d3d"
                        android:textSize="13sp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <RelativeLayout
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginEnd="20dp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="25dp"
                android:layout_marginRight="20dp"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:layout_marginLeft="16dp">
                <EditText
                    android:id="@+id/reward_number"
                    android:layout_width="259dp"
                    android:layout_height="46dp"
                    android:background="#f5f5f5"
                    android:hint="请选择数量"
                    android:textColorHint="#ffd1d1d1"
                    android:textSize="15sp"
                   />
                <TextView
                    android:layout_toRightOf="@+id/reward_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="个"
                    android:layout_marginLeft="20dp"
                    android:textColor="#ff3d3d3d"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:textSize="15sp"
                    />
            </RelativeLayout>

            <TextView
                android:layout_gravity="center"
                android:layout_width="194dp"
                android:layout_height="18dp"
                android:text="1花朵=2打赏币（1打赏币=0.1元）"
                android:textColor="#ff3d3d3d"
                android:textSize="13sp"
                android:gravity="center"
                android:layout_marginTop="8dp"
                />
            <TextView
                android:layout_width="297dp"
                android:layout_height="46dp"
                android:layout_gravity="center"
                android:layout_marginTop="13dp"
                android:background="@drawable/reward_back"
                android:gravity="center"
                android:text="确定"
                android:textColor="#ffffffff"
                android:textSize="15sp" />
        </LinearLayout>
        <ImageView
            android:id="@+id/close_pop"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@mipmap/back_x"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="14dp"/>
    </RelativeLayout>
</RelativeLayout>
