<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:descendantFocusability="blocksDescendants">>

    <LinearLayout
        android:id="@+id/comment_linear"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginBottom="50dp"
        android:visibility="visible">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <com.zwonline.top28.utils.ImageViewPlus
                android:id="@+id/comment_user_head"
                android:layout_width="42dp"
                android:layout_height="42dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="17dp"
                android:layout_marginTop="10dp"
               />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="11dp"
                android:layout_toRightOf="@id/comment_user_head"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/comment_user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="#7B7B7B"
                    android:textSize="14sp"
                    android:maxEms="13"
                    android:ellipsize="end"
                    android:lines="1"
                    />

                <TextView
                    android:id="@+id/comment_issue_time"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="3dp"
                    android:textColor="#C2C2C2"
                    android:textSize="12sp" />
            </LinearLayout>
            <RelativeLayout
                android:id="@+id/praise_like"
                android:layout_width="100dp"
                android:layout_height="42dp"
                android:orientation="horizontal"
                android:layout_alignParentRight="true"
                android:visibility="gone">

                <TextView
                    android:id="@+id/praise_num"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:lines="1"
                    android:layout_toLeftOf="@id/comment_like"
                    android:textColor="#C2C2C2"
                    android:textSize="14sp" />

                <CheckBox
                    android:id="@+id/comment_like"
                    android:layout_width="14dp"
                    android:layout_height="14dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="11dp"
                    android:background="@drawable/selector_comment_like"
                    android:button="@null"
                    android:drawablePadding="5dp"
                    android:enabled="false"
                    android:gravity="center"
                    android:layout_marginRight="15dp"/>


            </RelativeLayout>

            <!--<CheckBox-->
                <!--android:id="@+id/comment_like"-->
                <!--android:layout_width="14dp"-->
                <!--android:layout_height="14dp"-->
                <!--android:layout_alignParentRight="true"-->
                <!--android:layout_marginLeft="5dp"-->
                <!--android:layout_marginRight="20dp"-->
                <!--android:layout_marginTop="11dp"-->
                <!--android:background="@drawable/selector_comment_like"-->
                <!--android:button="@null"-->
                <!--android:drawablePadding="5dp"-->
                <!--android:gravity="center" />-->

            <!--<TextView-->
                <!--android:id="@+id/praise_num"-->
                <!--android:layout_width="wrap_content"-->
                <!--android:layout_height="wrap_content"-->
                <!--android:layout_marginLeft="140dp"-->
                <!--android:layout_marginTop="10dp"-->
                <!--android:layout_toLeftOf="@id/comment_like"-->
                <!--android:textColor="#C2C2C2"-->
                <!--android:textSize="14sp" />-->

            <RelativeLayout
                android:id="@+id/comment_dian"
                android:layout_width="40dp"
                android:layout_height="33dp"
                android:visibility="gone"
                android:layout_alignParentRight="true">

                <ImageView
                    android:layout_width="12dp"
                    android:layout_height="10dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="11dp"
                    android:src="@mipmap/diandian" />
            </RelativeLayout>

        </RelativeLayout>

        <TextView
            android:id="@+id/comment_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="74dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="7dp"
            android:lineSpacingExtra="3dp"
            android:textColor="#424242"
            android:textSize="14sp" />
    </LinearLayout>
    <TextView
        android:id="@+id/no_comment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="抢先评论"
        android:visibility="gone"
        android:layout_marginLeft="30dp"
        android:textSize="14sp"
        android:textColor="#424242"

        />
</RelativeLayout>