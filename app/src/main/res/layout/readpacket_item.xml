<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/readbackground1"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:background="@mipmap/red_bg1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/introduc_user"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="120dp"
                android:gravity="center"
                android:lines="2"
                android:text="薄礼相送，赠送给您一个"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <TextView
                android:layout_marginTop="15dp"
                android:layout_width="219dp"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="20-100商机币 的随机红包"
                android:textColor="#ffffffff"
                android:textSize="34sp" />

            <LinearLayout
                android:layout_width="187dp"
                android:layout_height="37dp"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="15dp"
                android:background="@color/blue"
                android:gravity="center">

                <TextView
                    android:layout_width="148dp"
                    android:layout_height="25dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="价值2-10元人民币"
                    android:textColor="#ffffffff"
                    android:textSize="18sp" />
            </LinearLayout>

            <ImageView
                android:id="@+id/receive"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_marginTop="5dp"
                android:layout_gravity="center"
                android:src="@mipmap/red_btn" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"
                android:gravity="center"
                android:text="点击领取"
                android:textColor="#ffffffff"
                android:textSize="16sp" />
        </LinearLayout>

        <LinearLayout
            android:visibility="gone"
            android:id="@+id/readbackground2"
            android:layout_width="match_parent"
            android:layout_height="530dp"
            android:layout_gravity="center"
            android:background="@mipmap/red_bg2"
            android:orientation="vertical"
            >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginTop="240dp"
                android:gravity="center"
                android:text="恭喜您！"
                android:textColor="#ffffffff"
                android:textSize="16sp" />

            <LinearLayout
                android:layout_width="269dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="15dp"
                android:layout_marginTop="10dp"
                android:background="@color/blue"
                android:gravity="center">

                <TextView
                    android:id="@+id/recrive_code"
                    android:layout_width="211dp"
                    android:layout_height="48dp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:text="获得60商机币"
                    android:textColor="#ffffffff"
                    android:textSize="34sp" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center"
                android:text="点击「查看商机币」可查看商机币余额"
                android:textColor="#ffffffff"
                android:textSize="15sp" />

            <View
                android:layout_width="240dp"
                android:layout_height="1dp"
                android:layout_gravity="center"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="12dp"
                android:background="#ffffffff"></View>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginBottom="33dp"
                android:gravity="center"
                android:text="点击「前往秘籍」可了解更多详细说明"
                android:textColor="#ffffffff"
                android:textSize="15sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/text_busin"
                    android:layout_width="126dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:background="@drawable/look_yangfen"
                    android:gravity="center"
                    android:text="查看商机币"
                    android:textColor="#ffb84900"
                    android:textSize="18sp" />

                <TextView
                    android:id="@+id/text_cheats"
                    android:layout_width="126dp"
                    android:layout_height="49dp"
                    android:layout_gravity="center"
                    android:layout_marginLeft="29dp"
                    android:background="@drawable/gorden_cirlcer"
                    android:gravity="center"
                    android:text="前往秘籍"
                    android:textColor="#ffb84900"
                    android:textSize="18sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/read_close"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_gravity="center"
        android:src="@mipmap/red_close" />
</LinearLayout>