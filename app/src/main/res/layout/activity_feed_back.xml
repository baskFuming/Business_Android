<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".activity.FeedBackActivity">

    <include layout="@layout/base_title_helper" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:id="@+id/linear"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="12dp"
                android:text="请选择反馈类型"
                android:textColor="#1d1d1d"
                android:textSize="18sp" />

            <RadioGroup
                android:id="@+id/type_group"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:layout_marginTop="21dp"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/system"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:checked="true"
                    android:drawableLeft="@drawable/pay_selector"
                    android:drawablePadding="10dp"
                    android:text="系统问题"
                    android:textColor="#1d1d1d"
                    android:textSize="14sp" />

                <RadioButton
                    android:id="@+id/idea"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:background="@android:color/transparent"
                    android:button="@null"
                    android:drawableLeft="@drawable/pay_selector"
                    android:drawablePadding="10dp"
                    android:text="优化意见"
                    android:textColor="#1d1d1d"
                    android:textSize="14sp" />

            </RadioGroup>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="275dp"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="15dp"
                android:layout_marginTop="21dp"
                android:background="@drawable/feedback_shape"
                android:orientation="vertical"
                android:paddingLeft="12dp"
                android:paddingBottom="12dp"
                android:paddingRight="12dp">

                <EditText
                    android:id="@+id/idea_et"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="8"
                    android:background="@null"
                    android:gravity="top"
                    android:layout_marginTop="10dp"
                    android:hint="你的意见是我们前进的动力"
                    android:maxLength="500"
                    android:textColor="#ff999999"
                    android:textSize="15sp" />

                <TextView
                    android:id="@+id/tv_num"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_weight="1"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="10dp"
                    android:gravity="right"
                    android:text="0/500"
                    android:textColor="#ff999999"
                    android:textSize="16sp" />
            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/idea_recy"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="14dp"
                android:layout_marginRight="14dp"
                android:layout_marginTop="50dp"
                android:choiceMode="singleChoice"
                android:divider="@null"
                android:fadingEdge="none"
                android:listSelector="@android:color/transparent"
                android:scrollbarStyle="outsideOverlay"
                android:visibility="visible"
                app:layoutManager="android.support.v7.widget.GridLayoutManager"
                tools:listitem="@layout/list_item_images" />

            <Button
                android:id="@+id/btn_idea"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_below="@+id/linear"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="50dp"
                android:layout_marginTop="36dp"
                android:background="@drawable/btn_register_shape"
                android:text="提交"
                android:textColor="@color/white"
                android:textSize="18sp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>