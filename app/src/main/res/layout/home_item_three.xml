<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:snser="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_marginTop="5dp"
    android:padding="10dp"
    android:background="@color/white">

    <TextView
        android:id="@+id/title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingRight="10dp"
        android:textColor="#33353b"
        android:textSize="16sp"
        android:lines="1"
        android:singleLine="true"/>

        <!--<ImageView-->
            <!--android:id="@+id/image"-->
            <!--android:adjustViewBounds="true"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:maxHeight="200dp"-->
            <!--android:layout_marginTop="5dp"-->
            <!--android:layout_marginBottom="10dp"-->
            <!--/>-->
    <com.zwonline.top28.utils.ImageViewPlu
        android:id="@+id/image"
        android:adjustViewBounds="true"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:maxHeight="200dp"
        android:layout_marginTop="5dp"
        android:layout_marginBottom="10dp"
        snser:rectRoundRadius="4dp"
        snser:type="rounded_rect" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        >

        <TextView
            android:id="@+id/type"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:textColor="#75A7EE"
            android:textSize="9sp"
            android:text="广告"
            android:gravity="center"
            android:background="@drawable/rectangle_shape_blue"
            />
        <TextView
            android:id="@+id/look_count"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@id/type"
            android:textColor="#9E9E9E"
            android:textSize="12sp"
            android:visibility="visible"/>

            <TextView
                android:id="@+id/cdatetime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#9E9E9E"
                android:textSize="12sp"
                android:layout_marginRight="10dp"
                android:layout_alignParentRight="true"
                android:visibility="visible"/>
        <TextView
            android:id="@+id/top"
            android:layout_width="30dp"
            android:layout_height="18dp"
            android:textColor="@color/reded"
            android:textSize="10sp"
            android:text="@string/article_top"
            android:gravity="center"
            android:background="@drawable/rectangle_shape_red"
            android:layout_marginRight="10dp"
            android:layout_alignParentRight="true"
            android:visibility="gone"/>

    </RelativeLayout>


</LinearLayout>