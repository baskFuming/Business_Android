<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    android:paddingTop="10dp">
<RelativeLayout
    android:id="@+id/liner"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:focusableInTouchMode="true">
    <TextView
        android:id="@+id/attribute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:textColor="@color/color_black_ff666666"
        android:textSize="@dimen/text_size_17"
        />
    <EditText
        android:id="@+id/remarks_et"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_marginRight="23dp"
        android:background="@null"
        android:hint="请输入备注"
        android:layout_centerVertical="true"
        android:textColor="#2A394C"
        android:textColorHint="#C1C1C1"
        android:textSize="16sp"
        android:layout_below="@id/attribute"
        android:imeOptions="actionSend"
        android:singleLine="true"
        android:maxLines="1"
        android:gravity="right"
        android:visibility="gone"
        />
    <TextView
        android:id="@+id/source"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="23dp"
        android:textSize="16sp"
        android:textColor="#ff404040"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:visibility="gone"/>
</RelativeLayout>


    <TextView
        android:id="@+id/value"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@id/liner"
        android:layout_centerVertical="true"
        android:layout_marginLeft="15dp"
        android:layout_toRightOf="@id/liner"
        android:padding="5dp"
        android:textColor="@color/color_black_333333"
        android:textSize="@dimen/text_size_15"
        android:visibility="visible"/>


    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="2px"-->
        <!--android:layout_below="@id/liner"-->
        <!--android:layout_marginTop="5dp"-->
        <!--android:background="@color/color_split_line_d9d9d9"-->
        <!--/>-->

    <ImageView
        android:id="@+id/arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:layout_marginRight="20dp"
        android:background="@drawable/nim_arrow_right"
        android:visibility="gone" />

</RelativeLayout>