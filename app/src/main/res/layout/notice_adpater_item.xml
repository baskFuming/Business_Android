<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        >
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            >
            <ImageView
                android:id="@+id/notice_tip"
                android:layout_width="8dp"
                android:layout_height="8dp"
                android:background="@drawable/redcircle_shape"/>
            <com.zwonline.top28.utils.ImageViewPlus
                android:id="@+id/notice_tou"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:layout_gravity="center"
                android:layout_marginLeft="15dp"
                android:layout_marginRight="16dp"
                android:src="@mipmap/no_photo_male"
                android:visibility="visible" />
            <ImageView
                android:id="@+id/notice_user"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginTop="35dp"
                android:layout_marginLeft="45dp"
                android:src="@mipmap/v_icon"
                android:visibility="gone"
                />
        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="84dp"
            android:orientation="vertical">
            <TextView
                android:id="@+id/notice_myself"
                android:layout_width="90dp"
                android:layout_height="21dp"
                android:text="-----------"
                android:layout_gravity="center_vertical"
                android:textColor="#ff2a394c"
                android:textSize="15sp"
                />
            <LinearLayout
                android:layout_marginTop="11dp"
                android:layout_marginBottom="13dp"
                android:layout_width="168dp"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <ImageView
                    android:id="@+id/notice_post_thumb"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_gravity="center"
                    android:visibility="gone"
                   />
                <TextView
                    android:id="@+id/notice_title"
                    android:layout_marginLeft="10dp"
                    android:layout_width="78dp"
                    android:layout_height="20dp"
                    android:text=""
                    android:layout_gravity="center_vertical"
                    android:textColor="#ff2a394c"
                    android:textSize="13sp"
                    android:maxLines="1"
                    android:ellipsize="end"
                    />
                <TextView
                    android:id="@+id/notice_words"
                    android:layout_width="168dp"
                    android:layout_height="36dp"
                    android:ellipsize="end"
                    android:maxLines="2"
                    android:text="-------"
                    android:textColor="#ff2a394c"
                    android:textSize="13sp"
                    android:visibility="gone" />
            </LinearLayout>
            <TextView
                android:id="@+id/notice_time"
                android:layout_width="wrap_content"
                android:layout_height="18dp"
                android:text="-------"
                android:textColor="#ff94979c"
                android:gravity="center_vertical"
                android:textSize="13sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="84dp"
            android:layout_height="84dp"
            android:orientation="vertical"
            >
            <ImageView
                android:id="@+id/notice_Image"
                android:layout_width="84dp"
                android:layout_height="84dp"
                android:layout_gravity="center"
                android:background="@mipmap/no_photo_female"
                />
            <TextView
                android:id="@+id/notice_intro"
                android:layout_width="wrap_content"
                android:layout_height="84dp"
                android:textColor="#ff2a394c"
                android:text=""
                android:textSize="13sp"
                android:ellipsize="end"
                android:maxLines="4"
                android:visibility="gone"
                />
        </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#fff2f2f2"
        android:layout_marginLeft="90dp"
        />
</LinearLayout>