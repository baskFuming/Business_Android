<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="324dp"
        android:layout_centerInParent="true"
        android:background="@drawable/business_serch_withe_shape"
        >
        <TextView
            android:id="@+id/bind_type"
            android:layout_width="79dp"
            android:layout_height="20dp"
            android:text="绑定微信"
            android:textColor="#ff3d3d3d"
            android:textSize="14sp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="100dp"
            android:gravity="center"
            />
        <RelativeLayout
            android:id="@+id/lin_close"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_alignParentRight="true"
            >
            <ImageView
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_alignParentRight="true"
                android:src="@mipmap/reward_close"
                android:layout_marginRight="20dp"
                android:layout_gravity="center"
                android:layout_marginTop="20dp"/>
        </RelativeLayout>
        <ImageView
            android:id="@+id/type_image"
            android:layout_width="79dp"
            android:layout_height="79dp"
            android:layout_marginTop="40dp"
            android:layout_marginLeft="100dp"
            />
        <LinearLayout
            android:layout_marginTop="33dp"
            android:gravity="center"
            android:layout_marginLeft="49dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_below="@+id/type_image">
            <TextView
                android:id="@+id/bind_information"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:text="完善账号信息即可获取随机"
                android:textColor="#ff3d3d3d"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/bind_force"
                android:layout_marginTop="6dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20-200算力奖励"
                android:textColor="#ff3d3d3d"
                android:textSize="24sp"
                android:layout_gravity="center"
                android:gravity="center"
                />
            <TextView
                android:id="@+id/bind_money"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="价值4-40元人民币"
                android:textColor="#ff3d3d3d"
                android:textSize="14sp"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_marginTop="5dp"

                />
        </LinearLayout>
        <TextView
            android:id="@+id/bind_wechat"
            android:layout_width="181dp"
            android:layout_height="36dp"
            android:layout_alignParentBottom="true"
            android:gravity="center"
            android:text="立刻绑定"
            android:textSize="15sp"
            android:textColor="@color/white"
            android:background="@drawable/reward_back"
            android:layout_marginLeft="49dp"
            android:layout_marginBottom="31dp"
            />

    </RelativeLayout>
</RelativeLayout>