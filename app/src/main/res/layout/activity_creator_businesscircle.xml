<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:snser="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    tools:context=".activity.CreatorBusinessCircleActivity">

    <include layout="@layout/base_title_helper" />

    <RelativeLayout
        android:id="@+id/upload_picture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.zwonline.top28.utils.ImageViewPlu
            android:id="@+id/business_cicler_cover"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="20dp"
            android:layout_weight="1"
            android:src="@mipmap/ic_launcher"
            snser:rectRoundRadius="4dp"
            snser:type="rounded_rect" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/more_icon"
            android:text="上传封面"
            android:textColor="#404040"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:background="#F0F0F0" />

    <RelativeLayout
        android:id="@+id/business_cicler_name_relaytive"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:text="商机圈名称"
            android:textColor="#404040"
            android:textSize="@dimen/sp_16" />
        <TextView
            android:id="@+id/business_cicler_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/more_icon"
            android:textColor="#404040"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:background="#F0F0F0" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="15dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="15dp"
            android:text="商机圈公告"
            android:textColor="#404040"
            android:textSize="@dimen/sp_16" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="23dp"
            android:drawablePadding="10dp"
            android:drawableRight="@mipmap/more_icon"
            android:textColor="#404040"
            android:textSize="@dimen/sp_16" />
    </RelativeLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:layout_marginLeft="16dp"
        android:background="#F0F0F0" />

    <TextView
        android:id="@+id/business_cicler_notice"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@null"
        android:hint="暂无公告"
        android:clickable="true"
        android:textColor="#404040"
        android:textColorHint="#CFD0D1"
        android:textSize="@dimen/sp_16" />
</LinearLayout>