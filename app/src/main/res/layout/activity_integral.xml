<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context="com.zwonline.top28.activity.IntegralActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:background="@color/white">

        <RelativeLayout
            android:id="@+id/integral_back"
            android:layout_width="30dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="15dp"
                android:layout_height="21dp"
                android:layout_centerVertical="true"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="10dp"
                android:src="@mipmap/return_black" />
        </RelativeLayout>

        <TextView
            android:id="@+id/title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="@string/coin_bole_coin"
            android:textColor="#121311"
            android:textSize="18sp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/integral_ch"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:background="@mipmap/reward_bunner"
        android:visibility="visible">

        <TextView
            android:id="@+id/money_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/ui_20_dip"
            android:layout_marginTop="12dp"
            android:alpha="0.7"
            android:text="@string/my_coin_bole_coin"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:id="@+id/business_coin_linear"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="12dp"
            android:orientation="horizontal"
            android:paddingRight="15dp">

            <TextView
                android:id="@+id/buy_hashrate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ui_20_dip"
                android:alpha="1"
                android:text="购买算力"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14" />

            <TextView
                android:id="@+id/buy_golden"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="@dimen/ui_20_dip"
                android:alpha="1"
                android:text="兑换金票"
                android:textColor="@color/white"
                android:textSize="@dimen/sp_14"
                />
        </LinearLayout>


        <TextView
            android:id="@+id/integral_tv_zh"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/money_zh"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="5dp"
            android:textColor="@color/white"
            android:textSize="44sp" />

        <TextView
            android:id="@+id/earn_state"
            android:layout_width="109dp"
            android:layout_height="33dp"
            android:layout_alignParentBottom="true"
            android:layout_alignParentRight="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="@dimen/ui_20_dip"
            android:layout_marginRight="15dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/reword__shape"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="14sp"

            />


        <TextView
            android:id="@+id/freeze"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="25dp"
            android:layout_marginLeft="@dimen/ui_20_dip"
            android:layout_marginTop="12dp"
            android:alpha="0.7"
            android:text="@string/freeze_opportunities_currency"
            android:textColor="@color/white"
            android:textSize="@dimen/sp_14" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rectangle_shape_gay"
            android:orientation="horizontal"
            android:visibility="gone">

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/earn_integral_ch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_gravity="center"
                    android:drawableLeft="@mipmap/earn_integral"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/earn_integral"
                    android:textColor="@color/black"
                    android:textSize="16sp" />

            </RelativeLayout>

            <View
                android:layout_width="1dp"
                android:layout_height="40dp"
                android:layout_gravity="center_vertical"
                android:background="@color/fenge"></View>

            <RelativeLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1">

                <TextView
                    android:id="@+id/integtal_pay_ch"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:layout_weight="1"
                    android:drawableLeft="@mipmap/chongzhi"
                    android:drawablePadding="5dp"
                    android:gravity="center"
                    android:text="@string/integtal_pay"
                    android:textColor="@color/black"
                    android:textSize="16sp" />
            </RelativeLayout>

        </LinearLayout>


    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/integral_tw"
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:background="@mipmap/integral_background"
        android:visibility="gone">

        <ImageView
            android:id="@+id/money_tw"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginRight="20dp"
            android:layout_marginTop="10dp"
            android:layout_toLeftOf="@id/integral_tv_tw"
            android:src="@mipmap/jifen" />

        <TextView
            android:id="@+id/integral_tv_tw"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="10dp"
            android:text="@string/coin_bole_coin"
            android:textColor="@color/white"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="65dp"
            android:layout_alignParentBottom="true"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="@drawable/rectangle_shape_gay"
            android:orientation="horizontal"
            android:padding="10dp"
            android:visibility="visible">

            <TextView
                android:id="@+id/earn_integral_tw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/earn_integral"
                android:gravity="center"
                android:text="@string/earn_integral"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="1dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@color/fenge"></View>

            <TextView
                android:id="@+id/convert_tw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawableTop="@mipmap/duihuan"
                android:gravity="center"
                android:text="@string/convert_BOC"
                android:textColor="@color/black"
                android:textSize="16sp" />

            <View
                android:layout_width="2dp"
                android:layout_height="50dp"
                android:layout_gravity="center_vertical"
                android:background="@color/fenge"></View>

            <TextView
                android:id="@+id/integtal_pay_tw"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:drawablePadding="5dp"
                android:drawableTop="@mipmap/chongzhi"
                android:gravity="center"
                android:text="@string/integtal_pay"
                android:textColor="@color/black"
                android:textSize="16sp" />
        </LinearLayout>

    </RelativeLayout>


    <android.support.design.widget.TabLayout
        android:id="@+id/integral_tab"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/white"
        app:tabIndicatorColor="@color/red"
        app:tabSelectedTextColor="@color/red"
        app:tabTextAppearance="@style/MyTabLayoutText"
        app:tabTextColor="@color/black"></android.support.design.widget.TabLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/fenge"></View>

    <android.support.v4.view.ViewPager
        android:id="@+id/integral_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"></android.support.v4.view.ViewPager>
</LinearLayout>
