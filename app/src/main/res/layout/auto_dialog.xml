<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/update_linear"
        android:layout_width="279dp"
        android:layout_height="359dp"
        android:background="@mipmap/updatetwo"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="160dp"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:textColor="#727272"
            android:textSize="16dp" />


        <TextView
            android:id="@+id/sure"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"
            android:gravity="center_horizontal"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/no"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="14dp"
            android:text="暂不更新"
            android:textColor="#727272"
            android:textSize="15sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/coerce_update"
        android:layout_width="279dp"
        android:layout_height="359dp"
        android:background="@mipmap/updateone"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/coerce_description"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="160dp"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:textColor="#727272"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/coerce_sure"
            android:layout_width="200dp"
            android:layout_height="30dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:gravity="center_horizontal"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/pb_progressbar_bar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_10"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="50dp"
            android:max="100"
            android:visibility="gone"
            android:progressDrawable="@drawable/progress_bar" />
    </LinearLayout>
</LinearLayout>