<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/updata"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/update_linear"
        android:layout_width="279dp"
        android:layout_height="365dp"
        android:background="@mipmap/updateone"
        android:orientation="vertical"
        android:visibility="visible">


        <TextView
            android:id="@+id/description"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="160dp"
            android:maxLines="5"
            android:scrollbars="vertical"
            android:textColor="#727272"
            android:textSize="16dp" />

        <LinearLayout
            android:id="@+id/updata_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_10"
            android:layout_marginTop="15dp"
            android:orientation="vertical"
            android:visibility="visible">

            <TextView
                android:id="@+id/sure"
                android:layout_width="210dp"
                android:layout_height="45dp"
                android:layout_gravity="center_horizontal"
                android:background="@drawable/btn_red_shape"
                android:gravity="center"
                android:text="立即更新"
                android:textColor="@color/white"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/no"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:text="暂不更新"
                android:textColor="#727272"
                android:textSize="15sp" />
            <TextView
                android:layout_width="60dp"
                android:layout_height="1dp"
                android:layout_marginTop="1dp"
                android:layout_gravity="center_horizontal"
                android:background="@color/black"/>
        </LinearLayout>

        <ProgressBar
            android:id="@+id/updata_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="40dp"
            android:max="100"
            android:progress="1"
            android:progressDrawable="@drawable/progress_bar"
            android:visibility="gone" />

        <TextView
            android:id="@+id/updata_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0%"
            android:textColor="@color/black"
            android:textSize="14sp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/coerce_update"
        android:layout_width="279dp"
        android:layout_height="359dp"
        android:background="@mipmap/updateone"
        android:orientation="vertical"
        android:visibility="gone">

        <TextView
            android:id="@+id/coerce_description"
            android:layout_width="match_parent"
            android:layout_height="115dp"
            android:layout_marginLeft="40dp"
            android:layout_marginRight="30dp"
            android:layout_marginTop="160dp"
            android:maxLines="6"
            android:scrollbars="vertical"
            android:textColor="#727272"
            android:textSize="16dp" />

        <TextView
            android:id="@+id/coerce_sure"
            android:layout_width="200dp"
            android:layout_height="45dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="23dp"
            android:background="@drawable/btn_red_shape"
            android:gravity="center"
            android:text="立即更新"
            android:textColor="@color/white"
            android:textSize="18sp"
            android:visibility="visible" />

        <ProgressBar
            android:id="@+id/force_updata_progressbar"
            style="?android:attr/progressBarStyleHorizontal"
            android:layout_width="match_parent"
            android:layout_height="5dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginTop="30dp"
            android:max="100"
            android:progress="1"
            android:progressDrawable="@drawable/updata_progressbar_shape"
            android:visibility="gone" />
        <TextView
            android:id="@+id/force_updata_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="0%"
            android:textColor="@color/black"
            android:textSize="18sp"
            android:visibility="gone"
            android:layout_marginLeft="@dimen/dp_10"/>
    </LinearLayout>
</LinearLayout>