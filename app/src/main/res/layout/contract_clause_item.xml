<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/clause_lin"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="5dp"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <LinearLayout
            android:id="@+id/contract_linear"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="15dp"
                android:background="@color/white"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/contract_clause_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:ellipsize="marquee"
                    android:lineSpacingExtra="5dp"
                    android:maxLength="25"
                    android:layout_marginRight="40dp"
                    android:scrollHorizontally="false"
                    android:textStyle="bold"
                    android:textColor="#404040"

                    android:textSize="16sp" />

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    >
                    <TextView
                        android:id="@+id/contract_clause_ratio"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#FF2B2B"
                        android:textSize="16sp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="2dp"
                        android:layout_toRightOf="@id/contract_clause_ratio"
                        android:text="%"
                        android:textColor="#FF2B2B"
                        android:textSize="16sp" />
                </RelativeLayout>

            </RelativeLayout>

            <TextView
                android:id="@+id/contract_clause_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="29dp"
                android:layout_marginRight="22dp"
                android:layout_marginTop="10dp"
                android:textColor="#404040"
                android:textSize="14sp" />
        </LinearLayout>


        <LinearLayout
            android:id="@+id/line"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_below="@id/contract_linear"
            android:layout_marginRight="25dp"
            android:layout_marginTop="38dp"
            android:orientation="horizontal"

            android:visibility="visible">

            <TextView
                android:id="@+id/clause_del"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="删除"
                android:textColor="#c1c1c1"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/clause_edit"
                android:layout_width="50dp"
                android:layout_height="50dp"
                android:gravity="center"
                android:text="编辑"
                android:textColor="#2B83FF"
                android:textSize="16sp" />

        </LinearLayout>
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="10dp"></View>
</LinearLayout>